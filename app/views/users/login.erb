<h1>Log In</h1>

<!--ERROR MESSAGE--------------------------------------------------------------------------------------------->
<% if session[:message].present? then %> <span class="error"><%= session[:message]  %></span><br><br> <% end %>
<!------------------------------------------------------------------------------------------------------------>

<!--FORM---------------------------------------------------------------------------------->
<form action="/login" method="POST"> 
  
  <!--username-->
  <input type="text" name="user[username]" placeholder="username" required></input><br><br>
  
  <!--password-->
  <input type="password" name="password" placeholder="password" required></input><br><br>
  
  <!--submit-->
  <input type="submit" value="Log In">
</form>
<!---------------------------------------------------------------------------------------->

<!--ERROR CLEAR------------->
<% session[:message] = nil %>
<!-------------------------->