<!------------------------------------------------------------------------------------------------------------>

<!--SNIPPETS--------------------------------------------------->
<br>
<% @snippets.each do |snippet| %>
  <a href="/snippets/<%= snippet.id %>"><%= snippet.title %></a>
  <br>
<% end %>
<!------------------------------------------------------------->

<!--ERROR CLEAR------------->
<% session[:message] = nil %>
