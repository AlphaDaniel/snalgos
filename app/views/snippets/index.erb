<!--ERROR MESSAGE----------------------------------------------------------------------------------------->
<% if session[:error].present? then %> <span class="error"><%= session[:error]  %></span><br><br> <% end %>
<!-------------------------------------------------------------------------------------------------------->

<!--SNIPPETS--------------------------------------------------->
<% @snippets.each do |snippet| %>
  <a href="/snippets/<%= snippet.id %>"><%= snippet.title %></a>
  <br>
<% end %>
<!------------------------------------------------------------->

<!--ERROR CLEAR----------->
<% session[:error] = nil %>
<!------------------------>
